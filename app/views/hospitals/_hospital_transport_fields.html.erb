<div class="nested-fields">
  <div class="form-group row">
    <div class="offset-4 col-4 offset-sm-2 col-sm-5">
      <%= f.collection_select :transport_id, Transport.all, :id, :name,
                              {include_blank: true}, class: 'form-control', required: true %>
    </div>
    <div class="col-3 col-sm-4">
      <%= f.number_field :transport_cost, class: 'form-control', min: 0, required: true %>
    </div>
    <div class="col-1">
      <%= link_to_remove_association f, class: 'btn btn-danger' do %>
        <span class="fas fa-times"></span>
      <% end %>
    </div>
  </div>
</div>
