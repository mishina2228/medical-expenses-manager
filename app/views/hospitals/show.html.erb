<h1>
  <%= t('helpers.title.show', model: Hospital.model_name.human) %>
</h1>

<%= render partial: 'partials/action' %>

<div class="container">
  <div class="row">
    <div class="col-4">
      <%= Hospital.human_attribute_name :name %>
    </div>
    <div class="col-8">
      <%= @hospital.name %>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <%= HospitalTransport.model_name.human %>
    </div>
    <div class="col-8">
      <% if @hospital.hospital_transports.present? %>
        <div class="row">
          <div class="col-6 bg-info">
            <%= Transport.human_attribute_name :name %>
          </div>
          <div class="col-6 bg-info">
            <%= HospitalTransport.human_attribute_name :transport_cost %>
          </div>
        </div>
        <% @hospital.hospital_transports.each do |ht| %>
          <div class="row">
            <div class="col-6">
              <%= ht.transport.name %>
            </div>
            <div class="col-6">
              <%= ht.transport_cost.to_s(:currency) %>
            </div>
          </div>
        <% end %>
      <% else %>
        <%= t('text.hospitals.hospital_transports.not_set') %>
      <% end %>
    </div>
  </div>
</div>
