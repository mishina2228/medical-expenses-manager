<h1>
  <%= t('helpers.title.show', model: Person.model_name.human) %>
</h1>

<%= render partial: 'partials/action' %>

<div class="container">
  <div class="row">
    <div class="col-4 col-sm-2">
      <%= Person.human_attribute_name :name %>
    </div>
    <div class="col-8 col-sm-10">
      <%= @person.name %>
    </div>
  </div>
  <div class="row">
    <div class="col-4 col-sm-2">
      <%= Person.human_attribute_name :relationship %>
    </div>
    <div class="col-8 col-sm-10">
      <%= @person.relationship %>
    </div>
  </div>
</div>